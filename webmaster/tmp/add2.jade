//output:add.php
script.
  $('.wrapp').css({'background':'url(img/bg2.png)','background-size':'cover','background-position':'center center','background-repeat':'no-repeat'});
div.add-div
  article.container
    h2 Let's write an Article. Ready?
    form(action='/' id='add-form' method="POST" ng-controller='addCtrl')
      .row
        select.columns.six(ng-model='table')
          option(value='' selected) -- Select One --
          option(value='tcode') Code
          option(value='tnotes') Notas
          option(value='twin') Windows
          option(value='tmac') MacOS
          option(value='tgnu') Linux
        span.columns.six.tip Your article will be posted on <b>{{table}}.</b>
      .row
        input.columns.six(type='text' ng-model='title' placeholder='Titulo')
        input.columns.six(type='text' ng-model='description' placeholder='description')
      //- --- UPLOAD --- -//
      .row(ng-controller="MyCtrl")
        div(class="button button-primary" ngf-select="upload($file)") Select File for Body
        input(type='text' ng-model='username' placeholder='Username')
      .row
        textarea.u-full-width(ng-model='bodyy')
        input.no-view(type='date' ng-controller='currentDate' value="{{currD | date:'dd-mm-yy'}}" ng-model='date')
      .row
        input.columns.four(type='text' placeholder="Who's writting?" ng-model='nau')
        input.columns.four(type='text' placeholder="Writter's Info" ng-model='iau')
        button.columns.four.button-primary(type='button' ng-click='addSubmit()') Postear
      
